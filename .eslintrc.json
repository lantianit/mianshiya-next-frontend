{
  "extends": [
    "next/core-web-vitals",
    "prettier"
  ],
  "rules": {
    "react/display-name": "off", // 关闭组件显示名称检查
    "no-console": "off",        // 关闭禁止console检查
    // 其他规则...
    "no-undef": 0,
    "@typescript-eslint/no-unsafe-member-access": ["error", {"ignoreTypeReferences": true}]
  },
  "compilerOptions": {
    "strict": true, // 保持严格模式
    "skipLibCheck": true, // 跳过类型声明文件检查
    "errorsAsWarnings": [2339], // 仅将TS2339转为警告
    "strictPropertyInitialization": false // 不强制属性初始化
  }
}
